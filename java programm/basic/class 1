class Test
{
	public static void main(String arg[])
	{
	    int a=10;
	    double b=3.7;
	    String s="hi;
	    a=20;
	    b=4.5;
	    s="bye";
	   System.out.println(a);
	    System.out.println(b);
	     System.out.println(s);
	}
}

grammer
_____________

int+int    int

3+2          5


String+int   String (concate)

"3"+2           32

int+String    String(concate)
3+"2"          32

String+String  String
"3"+"2"            32

String*int    error
String *String error

()   1
*     2
+     3

2+3+"4"+5    545

"2"+3+5     235 

"2"+(3+5)   28
"2"+3*5    215

"hi"+2+3    hi23

2+3+"hi"   5hi

